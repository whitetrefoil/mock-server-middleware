{
  "compileOnSave"  : false,
  "compilerOptions": {
    "allowJs"                       : true,
    "baseUrl"                       : ".",
    "declaration"                   : true,
    "declarationDir"                : "lib",
    "emitDecoratorMetadata"         : true,
    "esModuleInterop"               : true,
    "experimentalDecorators"        : true,
    "importsNotUsedAsValues"        : "error",
    "inlineSourceMap"               : false,
    "inlineSources"                 : false,
    "lib"                           : ["esnext"],
    "module"                        : "esnext",
    "moduleResolution"              : "node",
    "outDir"                        : "lib",
    "paths"                         : {
      "~/*": ["./src/*"]
    },
    "skipDefaultLibCheck"           : true,
    "skipLibCheck"                  : true,
    "sourceMap"                     : true,
    "strict"                        : true,
    "suppressImplicitAnyIndexErrors": true,
    "target"                        : "esnext"
  },
  "include"        : [
    "src/**/*.ts",
    "src/**/*.js",
    "declarations/*.d.ts"
  ],
  "exclude"        : [
    "**/node_modules/**"
  ]
}
